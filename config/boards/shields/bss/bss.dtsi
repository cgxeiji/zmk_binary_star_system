#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;
        // | C4R0 | C3R0 | C2R0 | C1R0 | C0R0 |               -               | C0R0 | C1R0 | C2R0 | C3R0 | C4R0 |
        // | C4R1 | C3R1 | C2R1 | C1R1 | C0R1 |      O        -        O      | C0R1 | C1R1 | C2R1 | C3R1 | C4R1 |
        // | C4R2 | C3R2 | C2R2 | C1R2 | C0R2 |               -               | C0R2 | C1R2 | C2R2 | C3R2 | C4R2 |
        //               | C4R3 | C3R3 | C2R3 | C1R3 | C0R3 | - | C0R3 | C1R3 | C2R3 | C3R3 | C4R3 |
        map = <
                RC(0,4) RC(0,3) RC(0,2) RC(0,1) RC(0,0)                                    RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)
                RC(1,4) RC(1,3) RC(1,2) RC(1,1) RC(1,0)                                    RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)
                RC(2,4) RC(2,3) RC(2,2) RC(2,1) RC(2,0)                                    RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)
                                RC(3,4) RC(3,3) RC(3,2) RC(3,1) RC(3,0)    RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)
        >;
    };


    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        
        diode-direction = "col2row"; 
        row-gpios
            = <&xiao_d 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
    };
};
